<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Detail">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            layout="@layout/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:src="@drawable/baseline_account_balance_black_48pt_3x"
            app:tint="#2081c3" />

        <TextView
            android:id="@+id/txt_bank_account_type_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="WF Checking Account"
            android:textAlignment="center"
            android:textColor="#4A4A4A"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_bank_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:paddingTop="2dp"
            android:text="Wells Fargo(x2356)"
            android:textColor="#7E7E7E"
            android:textSize="12dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/txt_done_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#2081c3"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"/>



    </RelativeLayout>
